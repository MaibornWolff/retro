{
  "name": "@retro/backend",
  "description": "The Node.js backend of Retro. Make retrospectives great again.",
  "homepage": "https://github.com/yduman/retro",
  "author": {
    "name": "Yadullah Duman",
    "url": "https://yduman.github.io"
  },
  "bugs": {
    "url": "https://github.com/yduman/retro/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yduman/retro.git",
    "directory": "backend/"
  },
  "version": "0.5.0",
  "main": "src/server.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec ts-node src/server.ts",
    "start:prod": "NODE_ENV=PRODUCTION node dist/src/server.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --quiet"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "express": "^4.17.3",
    "express-rate-limit": "^5.3.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.23",
    "puppeteer": "^10.1.0",
    "rmby": "^1.1.1",
    "socket.io": "^4.1.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/lodash": "^4.14.171",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^16.4.8",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
