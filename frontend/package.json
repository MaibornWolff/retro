{
  "name": "@retro/frontend",
  "description": "The React frontend of Retro. Make retrospectives great again.",
  "author": {
    "name": "Yadullah Duman",
    "url": "https://yduman.github.io"
  },
  "bugs": {
    "url": "https://github.com/yduman/retro/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yduman/retro.git",
    "directory": "frontend/"
  },
  "license": "MIT",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "env-cmd -f .env.production.local npm run build",
    "deploy": "run-s -l -n build:prod deploy:frontend",
    "deploy:frontend": "cp -a build/. ../backend/public/",
    "test": "react-scripts test",
    "test:cov": "react-scripts test --env=jsdom --coverage --watchAll=false",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "http-proxy-middleware": "^2.0.1",
    "lodash": "^4.17.21",
    "material-ui-dropzone": "^3.5.0",
    "nanoid": "^3.1.31",
    "qrcode": "^1.4.4",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-card-flip": "^1.1.1",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "recharts": "^2.0.10",
    "socket.io-client": "^4.1.3",
    "styled-components": "^5.3.0",
    "typewriter-effect": "^2.18.0",
    "zustand": "^3.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^16.4.8",
    "@types/qrcode": "^1.4.1",
    "@types/react": "^17.0.15",
    "@types/react-beautiful-dnd": "^13.1.1",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/recharts": "^1.8.19",
    "@types/socket.io-client": "^1.4.36",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "typescript": "~4.3.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
